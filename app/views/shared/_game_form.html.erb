
          <div class="panel panel-default"> 
            <div class="panel-heading"> 
              <h4>Create New Game</h4>
            </div>
            <div class="panel-body">
              <%= form_for(@game) do |f| %>

                <%= f.label :address %>
                <%= f.text_field :address, placeholder: "Newyork usa"%>

                <%= f.label :sport %>
                <%= f.select :sport, options_for_select(%w[Cricket Football Volleyball Basketball])%>    

                <%= f.label :description %>
                <%= f.text_area :description,  placeholder: "Add a small description..."%>

                <%= f.label :game_time %>
                <%= f.datetime_select :game_time, :order => [:month, :day, :year], :minute_step => 15 %>


            	<%= f.submit "Post", class: "btn btn-large btn-primary" %>

          	<% end %>
            </div>
  <!--/div>
 </div-->
          </div>


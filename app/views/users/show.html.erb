<% provide(:title, @user.name) %>
<header class="user_show_page_image">

  <div class="padding">
    <div class="full col-sm-9">
                      
      <!-- content -->                      
      <div class="row">
        
       <!-- main col left --> 
       <div class="col-sm-2">
          <div class="panel panel-default"> 
            <div class="panel-body">
               <h4>
                <%= gravatar_for @user %>
                <%= @user.name %>
              </h4>           
            </div>
          </div>

          <div class="panel panel-default"> 
            <div class="panel-heading"> 
              <h4> User Stats </h4>
            </div>
            <div class="panel-body">
              <h4> All stats here </h4>
              <h4> My interests </h4>
              <h4> Favorite teams and clubs </h4>
            </div>
          </div>

        </div>

        <div class="col-sm-7">   

          <div class="panel panel-default"> 
            <div class="panel-heading"> 
              <h4> 
                <% if @user.games.any? %>
                  <%=@user.name%> Games (<%= @user.games.count %>)
                <% end %>
              </h4>
            </div>
            <div class="panel-body">
              <% if @user.games.any? %>
                <% for @my_game in @my_games %>
                <ol class="list-group">
                  <li class="list-group-item my_game" > 
                    <h4 class = "my_game_sport" ><%= @my_game.sport %> </h4> 
                    <h4 class = "my_game_address"> 
                    <%= @my_game.address %>  
                    <% if current_user?(@my_game.user) %>
                      <%= link_to "delete", @my_game, method: :delete,
                                       data: { confirm: "You sure?" } %>
                    <% end %>
                    </h4>
                  </li>
                </ol>
                <% end %>
                <%= will_paginate @my_games %>
              <% end %>
            </div>
          </div>

          <div class="panel panel-default"> 
            <div class="panel-heading"> 
              <h4>
                <% if @user.going_games.any? %>
                  <%=@user.name%> Going Games (<%= @user.going_games.count %>)
                <% end %>  
              </h4>
            </div>
            <div class="panel-body">
              <% if @user.going_games.any? %>
                <% for @going_game in @going_games %>
                <ol class="list-group">
                  <li class="list-group-item my_game" > 
                    <h4 class = "my_game_sport" ><%= @going_game.sport %> </h4>
                    <h4 class = "my_game_sport" >
                      <%= @going_game.address %> 
                      <% if current_user?(@my_game.user) %>
                        <%= link_to "delete", current_user.gamers.find_by(going_game_id: @going_game.id), method: :delete,
                                       data: { confirm: "You sure?" } %>
                      <% end %>
                    </h4>
                  </li>
                </ol>
                <% end %>
                <%= will_paginate @going_games %>
              <% end %>
            </div>
          </div>

        </div>


        <div class="col-sm-3">
          <% if current_user?(@my_game.user) %>
           <%= render 'shared/game_form' %>
          <% end %>
        </div> 

      </div>
     </div>
 </header>